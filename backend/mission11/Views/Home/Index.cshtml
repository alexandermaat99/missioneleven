@{
    ViewData["Title"] = "Home Page";
}

@model IQueryable<Book>

    <h1>Books</h1>


    @foreach (Book b in Model)
    {
        <h3>@b.Title</h3>

        <ul>
            <li>Author: @b.Author</li>
            <li>Publisher: @b.Publisher</li>
            <li>ISBN: @b.Isbn</li>
            <li>Classification/Category @b.Classification</li>
            <li>Number of Pages: @b.PageCount</li>
            <li>Price: $@b.Price</li>
        </ul>
        
    }
